{
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "ts-jest"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/src/tests/setup.ts"
  ],
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "\\.(scss|sass|css)$": "identity-obj-proxy",
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/transforms/fileTransformer.ts"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/components/**/*.tsx",
    "src/pages/**/*.tsx"
  ]
}